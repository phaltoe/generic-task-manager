<%= content_tag :h1, @project.title %>

<h3>Project Team Members</h3>
<% if current_user.has_role? @project, :edit %>
  <%= render partial: 'update_permissions', locals: { team_members: @team_members } %>
<% else %>
  <table class="table table-hover">
    <tr>
      <th>Username</th>
      <th>Permissions</th>
    </tr>
    <%= render(@team_members) || "No Team members." %>
  </table>
<% end %>

<% if current_user.has_role? @project, :edit %>
  <h4>Admin options:</h4>
  <%= link_to 'Add Team Members', new_project_team_member_path(@project) %> |
<% end %>

<%= link_to 'Back to project', project_path(@project) %>
