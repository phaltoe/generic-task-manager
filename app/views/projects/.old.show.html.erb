<div class="row">
  <div class="col-md-12">
    <%= content_tag :h1, @project.title, class: 'projects' %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 border-right">


    <h3>Tasks</h3>
    <% if @tasks.empty? %>
      No tasks.
    <% else %>
      <ul>
        <%= render @tasks %>
      </ul>
    <% end %>
    <% if policy(@project.tasks.build).new? %>
      <%= link_to "Add Tasks", new_project_task_path(@project) %>
    <% end %>
  </div>
  <div class="col-md-4 team-members-box">
    <h3>Team Members</h3>
    <table class='members-table'>
      <thead>
        <td>Username</td>
        <td>Permissions
          <% if current_user.has_role? @project, :edit %>
            <div class="icon-bar-right">
              <%= link_to edit_project_permissions_path(@project) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
              <%= link_to add_project_team_members_path(@project) do %>
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
              <% end %>
            </div>
          <% end %>
        </td>
      </thead>
      <% if @project.owner == current_user %>
        <tr>
          <td>You</td>
          <td>You are the owner of this project!</td>
        </tr>
      <% end %>
      <%= render partial: 'team_members', collection: @team_members, as: 'team_member' %>
    </table>
  </div>
</div>
